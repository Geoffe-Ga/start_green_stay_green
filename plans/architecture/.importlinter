[importlinter]
root_package = myapp

[importlinter:contract:layers]
name = Enforce layered architecture
type = layers
layers =
    presentation
    application
    domain
    infrastructure

[importlinter:contract:independence]
name = Domain layer independence
type = forbidden
source_modules =
    myapp.domain
forbidden_modules =
    myapp.presentation
    myapp.application
    myapp.infrastructure

[importlinter:contract:no-cycles]
name = Prevent circular dependencies
type = independence
modules =
    myapp
